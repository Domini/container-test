FROM debian:trixie-slim

RUN apt-get update \
 && DEBIAN_FRONTEND=noninteractive apt-get --no-install-recommends --no-install-suggests -y install \
      aria2 \
      ca-certificates \
      curl \
      iproute2 \
      iputils-ping \
      jq \
      nftables \
      procps \
      tcpdump \
      vim

COPY usr/bin /usr/bin

WORKDIR /root
